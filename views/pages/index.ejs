<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Article Scraping</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" media="screen" href="style.css" />
</head>

<body>
  <div class="card-columns">
    <% articles.forEach(function(article) {  %>
    <div data-id="<%= article._id %>" class="card" style="width: 24rem;">
      <img class="card-img-top" src="<%= article.imgSrc %>" alt="
      Article Image">
      <div class="card-body">
        <h5 class="card-title">
          <%= article.articleTitle %>
        </h5>
        <p class="card-text">
          <%= article.articleSummary %>
        </p>
        <a target="_blank" href="<%= article.articleLink %>" class="btn btn-danger">Read Article</a>
      </div>
      <div class="comments">
        <div class="card-footer">
          <small class="text-muted">
            <div class="form-group">
              <textarea placeholder="comments..." class="comment form-control" rows="1"></textarea>
            </div>
            <button class="add-comment btn btn-outline-primary btn-sm">Add Comment</button>
          </small>
        </div>
      </div>
    </div>
    <% }); %>
  </div>

  <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
  crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js">
  </script>
  <script src="app.js"></script>

    </body>
</html>